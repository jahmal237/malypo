<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.level500.ub.malypo"
    >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/malypo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginDisplay" />
        <activity
            android:name=".RegisterDisplay"
            android:label="Create an Account" />
        <activity
            android:name=".LoginActivity"
            android:label="Sign in Malypo" />
        <activity
            android:name=".Profile"
            android:label="@string/title_accounts" />

        <activity
            android:name=".SignatureActivity"
            android:label="Signature" />

        <activity
            android:name=".About_Help"
            android:label="Help &amp; About" />

        <activity
            android:name=".IdentityPictureActivity"
            android:label="ID card Snapshot" />

        <activity
            android:name=".MoreActivity"
            android:label="More" />
    </application>

</manifest>