<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#ffffff"
    android:layout_height="wrap_content"
    >

    <Spinner
        android:id="@+id/register_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Country"
        android:background="@drawable/round_corners"
        android:padding="10dp"
        android:layout_margin="15dp"
        />


    <EditText
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="Mobile number"
        android:background="@drawable/round_corners"
        android:padding="10dp"
        android:layout_margin="15dp"
        />

    <EditText
        android:id="@+id/register_firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:background="@drawable/round_corners"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:hint="First name"/>

    <EditText
        android:id="@+id/register_lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:background="@drawable/round_corners"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:hint="Last name"/>

    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/round_corners"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:inputType="textEmailAddress"
        android:hint="Email"/>

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="15dp"
        android:background="@drawable/round_corners"
        android:padding="10dp"
        android:inputType="textPassword"
        android:hint="Password"/>

    <EditText
        android:id="@+id/register_signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:onClick="signatureScreen"
        android:background="@drawable/round_corners"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:hint="Signature"/>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create account"
        android:layout_margin="20dp"
        android:onClick="registerAccount"
        android:layout_gravity="bottom"
        android:background="#80B9"
        android:textColor="#ffffff" />

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_question"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_margin="20dp"
        android:onClick="loginScreen"
        android:layout_gravity="bottom"
        android:background="#2980b9"
        android:textColor="#ffffff" />


</LinearLayout>

    </ScrollView>